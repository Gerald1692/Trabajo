@{
    Layout = null;
}
        
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Inicio</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/Inicio/Inicio.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login/login.js"></script>


</head>
<body>
    <main class="page-wrapper">
        <div class="d-flex align-items-center justify-content-center min-vh-100">
            <div class="auth-card row gx-0 shadow-sm">
                <!-- Imagen / ilustración -->
                <div class="col-12 col-md-6 d-flex align-items-center justify-content-center p-4 left-panel">
                    <img src="~/recursos/Estudiantes.svg" alt="Ilustración Estudiantes" class="illustration img-fluid" />
                </div>

                <!-- Formulario -->
                <div class="col-12 col-md-6 p-4 p-md-5 right-panel">
                    
                    
                    <form id="loginForm" novalidate>
                      
                        <h3 class="mb-4 text-center">Iniciar sesión</h3>
                        <div class="mb-3">
                            <label for="username" class="form-label">Usuario</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                                <input id="username" name="username" type="text" class="form-control" placeholder="Digite su usuario" required>
                            </div>
                            <div class="invalid-feedback">Por favor ingresa tu usuario.</div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                                <input id="password" name="password" type="password" class="form-control" placeholder="Contraseña" required>
                                
                            </div>
                            <div class="form-text"><a href="#" class="small">¿Olvidaste tu contraseña?</a></div>
                            <div class="invalid-feedback">Por favor ingresa la contraseña.</div>
                        </div>

                        <div class="mb-3 form-check">

                            <input type="checkbox" class="form-check-input" id="recordar">
                            <label class="form-check-label" for="recordar">Recordarme</label>

                        </div>

                        <button type="submit" class="btn btn-primary w-100">Ingresar</button>

                        <div class="enlaces text-center mt-3">
                            <span>¿No tienes cuenta?</span> <a href="#">Registrarse</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

 
   
</body>
